<Window x:Class="MiyunaKimono.Views.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:beh="clr-namespace:MiyunaKimono.Behaviors"
        xmlns:svc="clr-namespace:MiyunaKimono.Services"
        xmlns:views="clr-namespace:MiyunaKimono.Views"
        xmlns:conv="clr-namespace:MiyunaKimono.Converters"
        Title="Miyuna Kimono" Height="900" Width="1440"
        WindowStartupLocation="CenterScreen" Background="White">


    <Window.Resources>

        <Style x:Key="NavTextButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin"  Value="22,0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#111"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopRightIconButton" BasedOn="{StaticResource IconGhostButton}" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="SearchBoxBorder" TargetType="Border">
            <Setter 
                Property="Background" Value="#EFEFEF"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>

                            <TextBlock Text="{TemplateBinding Tag}"
                                       Foreground="#888"
                                       
                                       Margin="4,0,0,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center">

                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>

                                        <Style.Triggers>
                                            <MultiDataTrigger>

                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>

                                                    <Condition Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource TemplatedParent}}" Value="False"/>
                                                </MultiDataTrigger.Conditions>

                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>

                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="16,10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="310"/>

                    <ColumnDefinition/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Assets/logo_miyuna.png" Width="40" Height="40" Margin="0,0,12,0"/>
                    <StackPanel>

                        <TextBlock Text="Miyuna" FontWeight="SemiBold" FontSize="18"/>
                        <TextBlock Text="Kimono" FontWeight="SemiBold" FontSize="18"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="1"
                        Style="{StaticResource SearchBoxBorder}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
            
                        MaxWidth="760" MinWidth="520" Margin="12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>

                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="pack://application:,,,/Assets/ic_search.png"
                               Width="16" Height="16"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>


                        <Rectangle Grid.Column="1" Width="1" Fill="#D7D7D7"
                                   VerticalAlignment="Stretch" Margin="2,4"/>

                        <TextBox Grid.Column="2"
                                 x:Name="SearchBox"
                                 Tag="ค้นหาสินค้า"
           
                                 Style="{StaticResource WatermarkTextBox}"
                                 FontSize="14"
                                 Padding="4,0"
           
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
            
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2"
   
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                   
                            Margin="0,0,6,0">

                    <Button Style="{StaticResource TopRightIconButton}" Margin="0,0,6,0" ToolTip="Wishlist" Click="Wishlist_Click">
                        <Image Source="pack://application:,,,/Assets/ic_heart.png"
                   
                            Stretch="Uniform" Width="18" Height="18"/>

                    </Button>

                    <Grid Grid.Column="2" Margin="0,0,6,0">

                        <Button Style="{StaticResource TopRightIconButton}" ToolTip="Cart" Click="OpenCart_Click">
                            <Image Source="pack://application:,,,/Assets/ic_cart.png" Width="18" Height="18"/>
                        </Button>

                        <Border Width="18" Height="18" CornerRadius="9"
                              Background="#f25f5f" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="2,-2,2,0"
                              Visibility="{Binding Source={x:Static svc:CartService.Instance}, Path=HasItems,
                              
                                Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="{Binding Source={x:Static svc:CartService.Instance}, Path=TotalQuantity}"
                                   FontSize="10" Foreground="White" FontWeight="Bold"
               
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <Button Style="{StaticResource TopRightIconButton}"
                            ToolTip="Account"
                            Click="OpenUserInfo_Click">

                        <Grid Width="28" Height="28">
                            <Border Background="#EEE" CornerRadius="14"/>

                            <Image Source="{Binding TopRightAvatar,
                           
                                RelativeSource={RelativeSource AncestorType=Window}}"
                                   Stretch="UniformToFill">
                                <Image.Clip>

                                    <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                                </Image.Clip>
                            </Image>

                        </Grid>
                    </Button>




                    <Button x:Name="BtnLogout"
                            Style="{StaticResource IconButtonNoHover}"
    
                            Width="32" Height="32"
                            Margin="8,0,0,0"
                            ToolTip="Log out"
                  
                            Click="Logout_Click">
                        <Image Source="pack://application:,,,/Assets/ic_logout.png"
                            Width="20" Height="20"/>
                    </Button>


                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4">

                    <Button Style="{StaticResource NavTextButton}" Click="Home_Click">
                        <TextBlock TextAlignment="Center"><Run Text="Home"/></TextBlock>
                    </Button>

                    <Button Style="{StaticResource NavTextButton}" Click="AllKimono_Click">
                        <TextBlock TextAlignment="Center"><Run Text="ALL"/><LineBreak/><Run Text="Kimono"/></TextBlock>
                    </Button>

                    <ItemsControl ItemsSource="{Binding DynamicNavCategories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource NavTextButton}" 
                                        Click="DynamicCategory_Click">

                                    <TextBlock Text="{Binding}" TextAlignment="Center"/>

                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>
        <ScrollViewer x:Name="HomeSection" Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Grid Margin="0,8,0,24" Height="500">

                    <ListBox
                        Style="{StaticResource HeroCarousel}"
                        ItemsSource="{Binding HeroImages}"
                        SelectedIndex="{Binding HeroIndex, Mode=TwoWay}"
                   
                        beh:AutoRotateBehavior.IsEnabled="True"
                        beh:AutoRotateBehavior.IntervalSeconds="4"/>


                </Grid>

                <TextBlock Text="Shop by Categories" FontSize="22" FontWeight="SemiBold" Margin="24,0,0,12"/>
                <WrapPanel Margin="24,0,24,36" ItemWidth="180" ItemHeight="160" HorizontalAlignment="Center">

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
     
                        Tag="Homongi" Click="CategoryIcon_Click">
                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_homongi.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Homongi"/><LineBreak/><Run Text="Kimono"/>

                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
       
                        Tag="Furisode" Click="CategoryIcon_Click">
                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_furisode.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Furisode"/><LineBreak/><Run Text="Kimono"/>

                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
         
                        Tag="Hakama" Click="CategoryIcon_Click">
                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_hakama.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Hakama pattern"/><LineBreak/><Run Text="Kimono"/>

                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
          
                        Tag="Yukata" Click="CategoryIcon_Click">
                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_yukata.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Yukata"/>
                            </TextBlock>

                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
                        Tag="Kurotomesode" 
                        Click="CategoryIcon_Click">
                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_kurotome.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Kurotomesode pattern"/><LineBreak/><Run Text="Kimono"/>
                            </TextBlock>

                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
                        Tag="Shiromuku" Click="CategoryIcon_Click">

                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_shiromuku.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Shiromuku wedding"/><LineBreak/><Run Text="Kimono"/>
                            </TextBlock>

                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconGhostButton}" Width="160" Margin="12"
                        Tag="Accessories" Click="CategoryIcon_Click">

                        <StackPanel>
                            <Border Width="72" Height="72" CornerRadius="36" Background="#EFEFEF" HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Assets/cat_accessories.png" Stretch="Uniform"/>

                            </Border>
                            <TextBlock TextAlignment="Center" Margin="0,8,0,0">
                <Run Text="Accessories"/>
                            </TextBlock>

                        </StackPanel>
                    </Button>

                </WrapPanel>


                <Grid Margin="24,12,24,8">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <TextBlock Text="Top Picks For You"
                               FontSize="22" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
            
                        Content="More >"
                            Style="{StaticResource TopTextButton}"
                            FocusVisualStyle="{x:Null}"
                          
                            Margin="12,0,0,0"
                            Click="MoreTop_Click"/>
                </Grid>

                <ItemsControl x:Name="TopPicksList"
             
                    ItemsSource="{Binding TopPicks}"
                              Margin="12,0,12,24"
                              HorizontalContentAlignment="Center"
                      
                    Loaded="TopPicksHost_Loaded"
                              SizeChanged="TopPicksHost_SizeChanged">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>

                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>

                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="12"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>


                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="{StaticResource TopCardWidth}"
                                    Padding="12"
                                    Background="#FAFAFA"
                         
                                    BorderBrush="#E9E9EC" BorderThickness="1"
                                    CornerRadius="14">
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>

                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>


                                    <Grid>
                                        <Border Background="#EEE" CornerRadius="10">

                                            <Grid>
                                                <Border>

                                                    <Border.Style>
                                                        <Style TargetType="Border">

                                                            <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"/>

                                                        </Style>
                                                    </Border.Style>

                                                    <Image Stretch="UniformToFill"
                     
                                                        Source="{Binding Image1Path}"/>
                                                </Border>

                                            </Grid>
                                        </Border>

                                    </Grid>

                                    <StackPanel Grid.Row="1" Margin="0,10,0,8">

                                        <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                        <TextBlock Foreground="#666" Margin="0,2,0,0">
                                
                                            <Run Text="#"/>
                                            <Run Text="{Binding Category, TargetNullValue=—}"/>
                                        
                                            <Run Text=" "/><Run Text="Kimono"/>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">

                                            <TextBlock Text="Price " FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} THB}"/>

                                            <TextBlock Text="{Binding OffText}" Foreground="#888" FontSize="12" Margin="8,0,0,0"/>
                                            <TextBlock Text="  " />

                                            <TextBlock Text="Qty " />
                                            <TextBlock Text="{Binding Quantity}"/>

                                        </StackPanel>
                                    </StackPanel>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="42"/>
                                        </Grid.ColumnDefinitions>


                                        <Button Grid.Column="0"
                                                Content="VIEW DETAILS"
                
                                                Height="34"
                                                Style="{StaticResource PinkOutlineButton}"
                   
                                                Click="ViewDetails_Click"
                                                Tag="{Binding}"/>


                                        <ToggleButton Grid.Column="1" Width="36" Height="34"
                                                  Background="White"
                              
                                                    BorderBrush="#E9E9EC" BorderThickness="1"
                                                  IsChecked="{Binding IsFavorite, Mode=TwoWay}"
                           
                                                    Checked="Heart_Checked" Unchecked="Heart_Unchecked"
                                                  FocusVisualStyle="{x:Null}">

                                            <ToggleButton.Template>

                                                <ControlTemplate TargetType="ToggleButton">

                                                    <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
              
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8" 
                                                        Padding="6">
                                                        <Image x:Name="img" Source="pack://application:,,,/Assets/ic_heart_line.png"/>

                                                    </Border>

                                                    <ControlTemplate.Triggers>

                                                        <Trigger Property="IsChecked" Value="True">

                                                            <Setter TargetName="img" Property="Source"
                                      
                                                                Value="pack://application:,,,/Assets/ic_heart_fill.png"/>
                                                        </Trigger>

                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>

                                            </ToggleButton.Template>
                                        </ToggleButton>

                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Grid Margin="0,24,0,24" Height="500">
                    <ListBox
                        Style="{StaticResource HeroCarousel2}"
                        ItemsSource="{Binding HeroImages2}"
                        SelectedIndex="{Binding HeroIndex2, Mode=TwoWay}"/>


                </Grid>
                <Grid Margin="24,24,24,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition 
                            Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Best Selling"
                           FontSize="22" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>


                    <Button Grid.Column="1"
                        Content="More >"
                        Style="{StaticResource TopTextButton}"
                        FocusVisualStyle="{x:Null}"
        
                        Margin="12,0,0,0"
                        Click="MoreBestSelling_Click"/>
                </Grid>

                <ItemsControl ItemsSource="{Binding BestSellingItems}" Margin="12,0,12,24"
                         
                    HorizontalContentAlignment="Center"
                          Loaded="TopPicksHost_Loaded"
                          SizeChanged="TopPicksHost_SizeChanged">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>

                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>

                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="12"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>


                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="{StaticResource TopCardWidth}"
                                Padding="12"
     
                                Background="#FAFAFA"
                                BorderBrush="#E9E9EC" BorderThickness="1"
                                CornerRadius="14">

                                <Grid>
                                    <Grid.RowDefinitions>

                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>

                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Border Background="#EEE" CornerRadius="10">

                                            <Border>
                                                <Border.Style>

                                                    <Style TargetType="Border">
                                                        <Setter Property="Height" 
                                                            Value="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"/>
                                                    </Style>

                                                </Border.Style>
                                                <Image Stretch="UniformToFill"
                                                
                                                    Source="{Binding Image1Path, Converter={StaticResource DbImage}}"/>
                                            </Border>
                                        </Border>

                                    </Grid>

                                    <StackPanel Grid.Row="1" Margin="0,10,0,8">

                                        <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                        <TextBlock Foreground="#666" Margin="0,2,0,0">
                                        <Run Text="#"/>
          
                                            <Run Text="{Binding Category, TargetNullValue=—}"/>
                                        <Run Text=" "/><Run Text="Kimono"/>

                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">

                                            <TextBlock Text="Price " FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} THB}"/>
                                            <TextBlock Text="{Binding OffText}" 
                                                Foreground="#888" FontSize="12" Margin="8,0,0,0"/>
                                            <TextBlock Text="  " />
                                            <TextBlock Text="Qty " />

                                            <TextBlock Text="{Binding Quantity}"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="42"/>

                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0"
                                  
                                            Content="VIEW DETAILS"
                                            Height="34"
                                            Style="{StaticResource 
                                            PinkOutlineButton}"
                                            Click="ViewDetails_Click"
                                            Tag="{Binding}"/>

                                        <ToggleButton Grid.Column="1" Width="36" Height="34"
                                                  Background="White"
                   
                                                    BorderBrush="#E9E9EC" BorderThickness="1"
                                                  IsChecked="{Binding IsFavorite, Mode=TwoWay}"
                
                                                    Checked="Heart_Checked" Unchecked="Heart_Unchecked"
                                                  FocusVisualStyle="{x:Null}">

                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">

                                                    <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
           
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                      
                                                        CornerRadius="8" Padding="6">
                                                        <Image x:Name="img" Source="pack://application:,,,/Assets/ic_heart_line.png"/>

                                                    </Border>
                                                    <ControlTemplate.Triggers>

                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="img" Property="Source"
               
                                                                Value="pack://application:,,,/Assets/ic_heart_fill.png"/>

                                                        </Trigger>

                                                    </ControlTemplate.Triggers>

                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>

                                    </Grid>
                                </Grid>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </ScrollViewer>

        <ScrollViewer x:Name="CartSection"
              Grid.Row="2"
            
              Visibility="Collapsed"
              VerticalScrollBarVisibility="Auto">
            <views:CartView x:Name="CartViewHost"/>
        </ScrollViewer>

        <ContentControl x:Name="CheckoutHost"
                    Grid.Row="2"
                    Visibility="Collapsed"/>


        <ContentControl x:Name="UserInfoHost"
                Grid.Row="2"
                Visibility="Collapsed"/>
        <ContentControl x:Name="EditProfileHost"
                Grid.Row="2"
          
                Visibility="Collapsed"/>

        <ContentControl x:Name="OrderDetailsHost"
                        Grid.Row="2"
                        Visibility="Collapsed"/>



        <ScrollViewer x:Name="ListSection"
    
            Grid.Row="2"
              Visibility="Collapsed"
              VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24,16,24,24">

                <Grid Margin="0,0,0,8">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding ListTitle}"
 
                        FontSize="22" FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                       Text="{Binding ListCountText}"
         
                        Foreground="#777" FontSize="13"
                       VerticalAlignment="Center"/>
                </Grid>

                <ItemsControl ItemsSource="{Binding FilteredProducts}" Margin="0,8,0,0"
       
                    HorizontalContentAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6"/>

                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">

                            <Setter Property="Margin" Value="12"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Border Width="{StaticResource TopCardWidth}" Padding="12"
                            Background="#FAFAFA" BorderBrush="#E9E9EC" BorderThickness="1"
             
                                CornerRadius="14">
                                <Grid>
                                    <Grid.RowDefinitions>

                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>

                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Border Background="#EEE" CornerRadius="10">

                                            <Border>
                                                <Border.Style>

                                                    <Style TargetType="Border">
                                                        <Setter Property="Height"
                                       
                                                            Value="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"/>
                                                    </Style>

                                                </Border.Style>
                                                <Image Stretch="UniformToFill" Source="{Binding Image1Path}"/>

                                            </Border>
                                        </Border>
                                    </Grid>


                                    <StackPanel Grid.Row="1" Margin="0,10,0,8">

                                        <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                        <TextBlock Foreground="#666" Margin="0,2,0,0">
                                    <Run Text="#"/>
           
                                            <Run Text="{Binding Category, TargetNullValue=—}"/>
                                    <Run Text=" "/><Run Text="Kimono"/>

                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="Price " FontWeight="SemiBold"/>

                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} THB}"/>
                                            <TextBlock Text="{Binding OffText}" Foreground="#888" FontSize="12" Margin="8,0,0,0"/>

                                            <TextBlock Text="  "/>
                                            <TextBlock Text="Qty "/>

                                            <TextBlock Text="{Binding Quantity}"/>
                                        </StackPanel>

                                    </StackPanel>

                                    <Grid Grid.Row="2">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>

                                            <ColumnDefinition Width="42"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="VIEW DETAILS" Height="34"
    
                                            Style="{StaticResource PinkOutlineButton}" Click="ViewDetails_Click" Tag="{Binding}"/>
                                        <ToggleButton Grid.Column="1" Width="36" Height="34"
                  
                                            Background="White"
                                                  BorderBrush="#E9E9EC" BorderThickness="1"
                 
                                                  IsChecked="{Binding IsFavorite, Mode=TwoWay}"
                                                  Checked="Heart_Checked" Unchecked="Heart_Unchecked"
              
                                                  FocusVisualStyle="{x:Null}">


                                            <ToggleButton.Template>

                                                <ControlTemplate TargetType="ToggleButton">

                                                    <Border Background="{TemplateBinding Background}"
                                                                                            BorderBrush="{TemplateBinding BorderBrush}"
  
                                                                                            BorderThickness="{TemplateBinding BorderThickness}"
         
                                                                                        CornerRadius="8" Padding="6">

                                                        <Image x:Name="img" Source="pack://application:,,,/Assets/ic_heart_line.png"/>

                                                    </Border>

                                                    <ControlTemplate.Triggers>

                                                        <Trigger Property="IsChecked" Value="True">

                                                            <Setter TargetName="img" Property="Source"
                                                      
                                                                Value="pack://application:,,,/Assets/ic_heart_fill.png"/>
                                                        </Trigger>

                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>

                                            </ToggleButton.Template>
                                        </ToggleButton>
                                    </Grid>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

            </StackPanel>
        </ScrollViewer>




    </Grid>
</Window>